<h1 class="title text-center">Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col" id="list-burgers">
            <h2 class="burger-title text-center">Burgers Available</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="available-burgers">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.burger_name}}
                    <button type="submit" class="btn- btn-default" id="burger-ready">DEVOUR IT</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class = "col" id="burger-img">
            <img>
        </div>
        <div class="col" id="list-devoured">
            <h2 class="burger-title text-center">Burgers Devoured</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="devoured-burgers">
                {{this.burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

